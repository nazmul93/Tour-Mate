<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
                android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/main_background"
    tools:context=".activity.AddMomentExpenseActivity">

    <EditText
        android:id="@+id/etCostTitle"
        android:hint="Enter Title"
        android:inputType="text"
        android:textColor="@color/textColor"
        android:textColorHint="@color/textColor"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etCostAmount"
        android:layout_below="@+id/etCostTitle"
        android:hint="Enter amount"
        android:textColor="@color/textColor"
        android:textColorHint="@color/textColor"
        android:inputType="number"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnSaveCostEvent"
        android:layout_below="@+id/etCostAmount"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:text="Save"
        android:background="@drawable/custom_button_x"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:onClick="save"
        android:layout_width="120dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnCancelCostEvent"
        android:layout_below="@+id/etCostAmount"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="8dp"
        android:text="Cancel"
        android:background="@drawable/custom_button_x"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:onClick="cancel"
        android:layout_width="120dp"
        android:layout_height="wrap_content"/>

</RelativeLayout>
